<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title }}</title>
    <base href="{{ base }}" /> {% if description %}
    <meta name="description" content="{{ description }}" /> {% endif %} {% if keywords %}
    <meta name="keywords" content="{{ keywords }}" /> {% endif %}
    <script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
    <link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
    <script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="catalog/view/theme/iamtoko/stylesheet/stylesheet.css" rel="stylesheet"> {% for style in styles %}
    <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" /> {% endfor %} {% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
    {% endfor %}
    <script src="catalog/view/javascript/common.js" type="text/javascript"></script>
    {% for link in links %}
    <link href="{{ link.href }}" rel="{{ link.rel }}" /> {% endfor %} {% for analytic in analytics %} {{ analytic }} {% endfor %}
</head>

<body>
    <heder class="header">
        <ul class="header__link hidden-sm hidden-xs">
            <li class="header__item">
                <a href="{{ manufacture_top }}">{{ text_manufacture_top }}</a>
            </li>
            <li class="header__item">
                <a href="{{ about_us_toko }}">{{ text_online_top }}</a>
            </li>
            <li class="header__item">
                <a href="{{ delivery_toko }}">{{ text_exchange_top }}</a>
            </li>
            <li class="header__item">
                <a href="{{ delivery_toko }}">{{ text_payment_top }}</a>
            </li>
            <li class="header__item">
                <a href="/index.php?route=extension/module/p_review/all">{{ text_reviewus_top }} <span>☺</span></a>
            </li>
            <li class="header__item">
                {{ text_contactus_top }}:<a href="tel:{{ telephone_href }}" title="Позвонить">{{ telephone }}</a>
            </li>
        </ul>
        <nav class="header__nav default">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-12 menu-left">
                        <div class="hamburger">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <div class="header__menu">{{ menu }}</div>
                        <div id="logo" class="header__logo">
                            <a href="{{ home }}"><span>iam</span>TOKO</a>
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-4 col-xs-12">{{ search }}</div>
                    <div class="col-md-4 col-sm-4 col-xs-12 menu-right">

                        <div class="header__right">
                            <ul class="list-inline hed-menu header__right-menu">

                                <li class="dropdown header__accaunt">
                                    <a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <i>
                                          <svg class="icon" viewBox="0 0 25 25" width="25" height="25">
                                              <use xmlns:xlink="https://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-login"></use>
                                          </svg>
                                      </i>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            {% if logged %}
                                            <li class="login-name">{{ LastName }} {{ FirstName }}</li>
                                            <li><a href="{{ account }}">{{ text_account }}</a></li>
                                            <li><a href="{{ order }}">{{ text_order }}</a></li>
                                            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                                            <li><a href="{{ download }}">{{ text_download }}</a></li>
                                            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
                                            {% else %}
                                            <li><a href="{{ register }}">{{ text_register }}</a></li>
                                            <li><a href="{{ login }}">{{ text_login }}</a></li>
                                            {% endif %}
                                        </ul>
                                </li>
                                <li class="phone-xs dropdown header__phone">
                                    <a href="{{ contact }}" title="{{ text_contact }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <i>
                                              <svg class="icon {{ wl_class }}" viewBox="0 0 27 27" width="27" height="27">
                                                  <use xmlns:xlink="https://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-phone"></use>
                                              </svg>
                                          </i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-center drop-phone-xs">
                                        <li class="header__phone__link"><a href="#modalCallbackFooterFooter" id="button_callbackfooter" data-toggle="modal"><i class="fa fa-volume-control-phone"></i> <span>{{ callback_title }}</span></a></li>
                                        <li class="header__phone__link"><a href="tel:{{ telephone_href }}" title="Позвонить">{{ telephone }}</a></li>
                                        <li class="header__phone__link"><a href="tel:{{ telephone_href2 }}" title="Позвонить">{{ telephone2 }}</a></li>
                                        <li class="header__phone__link"><a href="mailto:{{ email }}" title="email">{{ email }}</a></li>
                                        <li class="header__phone__link menu_social">
                                            <div>
                                                <a href="viber://chat?number={{ viber }}" data-hover="hover-on-link" title="viber" rel="nofollow" target="_blank">
                                                    <svg class="icon icon-viber" viewBox="0 0 30 30" width="30" height="30">
                                              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-viber"></use>
                                            </svg>
                                                </a>
                                            </div>
                                            <div>
                                                <a href="tg://resolve?domain={{ telegram }}" data-hover="hover-on-link" title="viber" rel="nofollow" target="_blank">
                                                    <svg class="icon icon-telegram" viewBox="0 0 30 30" width="30" height="30">
                                              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-telegram"></use>
                                            </svg>
                                                </a>
                                            </div>
                                            <div>
                                                <a href="{{ instagram }}" data-hover="hover-on-link" rel="nofollow" target="_blank">
                                                    <svg class="icon icon-instagram" viewBox="0 0 30 30" width="30" height="30">
                                              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-instagram"></use>
                                            </svg>
                                                </a>
                                            </div>
                                            <div>
                                                <a href="{{ facebook }}" data-hover="hover-on-link" rel="nofollow" target="_blank">
                                                    <svg class="icon icon-faseboock" viewBox="0 0 30 30" width="30" height="30" data-hover="hover-on-link" rel="nofollow" target="_blank">
                                              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-faseboock"></use>
                                            </svg>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                                <li class="header__wishlist">
                                    <a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}">
                                        <i>
                                          <svg class="icon {{ wl_class }}" viewBox="0 0 26 25" width="26" height="25">
                                              <use xmlns:xlink="https://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-heart"></use>
                                          </svg>
                                      </i>
                                        <span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a>
                                </li>
                                <li class="header__cart">{{ cart }}</li>
                                <li class="header__language">{{ language }}</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

        </nav>
        {{ tmdheader }}

        <input type="hidden" value="{{ one_click }}" id="one_click" />
        <input type="hidden" value="{{ name_callback }}" id="name_callback" />
        <input type="hidden" value="{{ phone_callback }}" id="phone_callback" />
        <input type="hidden" value="{{ entry_name }}" id="entry_name" />
        <input type="hidden" value="{{ entry_phone }}" id="entry_phone" />
        <input type="hidden" value="{{ entry_enquiry }}" id="entry_enquiry" />
        <input type="hidden" value="{{ text_send }}" id="text_send" />
        <input type="hidden" value="{{ text_loading }}" id="text_loading" />
        <input type="hidden" value="{{ success_message }}" id="success_message" />
        <input type="hidden" value="{{ text_show_all }}" id="text_show_all" />
    </heder>